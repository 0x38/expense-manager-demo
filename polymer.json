{
  "entrypoint": "index.html",
  "shell": "src/expense-app.html",
  "fragments": [
    "src/overview-page.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json"
  ],
  "builds": [{
    "name": "bundled",
    "addServiceWorker": true,
    "bundle": true,
    "js": {
      "compile": true,
      "minify": true
    },
    "css": {
      "minify": true
    },
    "html": {
      "minify": true
    }
  }],
  "lint": {
    "rules": ["polymer-2"]
  }
}
